<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
    PUBLIC "-//mybatis.org//DTD mapper 3.0//EN" 
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dog">
    <select id="selectDog" resultType="com.example.wangjue.Dog">
        select * from dog
    </select>
    <select id="selectByName" resultType="com.example.wangjue.Dog">
        select * from dog where name like '%${Name}%'
    </select>
    <insert id="insertDog" parameterType="com.example.wangjue.Dog">
        insert into dog(name, age) values(#{name}, #{age})
    </insert>
    <update id="updateDog">
         <!-- parameterType="java.util.Map"> -->
        update dog set age=#{age} where id = 1
    </update>
    <delete id="deleteDog">
        delete from dog where id=#{id}
    </delete>
</mapper>